
@{
    ViewBag.Title = "ManagerLogin";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ManagerLogin</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Css/base.css" rel="stylesheet" type="text/css" />
    <link href="~/Css/manager_login_layout.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="body_container">
        <div class="top_logo">
            <img src="~/Images/logo_blue.png" />
        </div>

        <div class="body-content">
            <div class="login_wrap">
                <div class="login_title">后台管理员登录</div>
                <div class="login_form">
                    <div class="form-group">
                        <label for="reg_input_account">账号</label>
                        <input type="email" class="form-control" id="reg_input_account">
                    </div>
                    <div class="form-group">
                        <label for="reg_input_password">密码</label>
                        <input type="tel" class="form-control" id="reg_input_password">
                    </div>
                    <a href="#" class="forget_password">忘记密码?</a>
                    <button type="submit" class="btn btn-primary btn_login">登录</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Js/manager_layout.js"></script>
</body>
</html>